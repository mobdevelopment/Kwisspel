<Window x:Class="QuizSpel.View.QuizGameoverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizSpel.View"
        mc:Ignorable="d"
        Title="QuizGameoverWindow" Height="300" Width="300"
        DataContext="{ Binding Quiz, Source={ StaticResource Locator } }">
    <StackPanel>
        <DockPanel Margin="0, 5, 0, 10">
            <TextBlock Margin="0, 0, 26.5, 0">Name:</TextBlock>
            <TextBox Text="{ Binding Score.Name }"></TextBox>
        </DockPanel>
        <DockPanel Margin="0, 0, 0, 10">
            <TextBlock Margin="0, 0, 0, 0">Your Score:</TextBlock>
            <TextBlock Text="{ Binding QuestionsCorrect }" Width="224"></TextBlock>
        </DockPanel>
        <Button Margin="0, 0, 0, 10" Command="{Binding SubmitScoreCommand}" Content="Submit" Width="100" ></Button>

    </StackPanel>
</Window>
