<Window x:Class="QuizSpel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizSpel"
        mc:Ignorable="d"
        Title="QuizMenu" Height="155" Width="300"
        DataContext="{ Binding Main, Source={ StaticResource Locator } }">
    <StackPanel Margin="10">
        <!-- PLAY Quiz -->
        <Button Command="{Binding ShowQuizSelectionWindowCommand}" Content="Play" Height="50"></Button>
        <!-- MANAGE Quiz -->
        <Button Command="{Binding ShowQuizManagementWindowCommand}" Content="Quiz Management" Height="50"></Button>
    </StackPanel>
</Window>
